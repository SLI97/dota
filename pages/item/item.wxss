page {
  color: #6e6e6e;
}

.container.Myitem .bg {
  content: " ";
  position: fixed;
  z-index: -1;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.container {
  padding: 10rpx 30rpx;
}

.top {
  display: flex;
  /* align-items: center; */
}

.top .left {
  margin: 0 20rpx 0 0;
}

.top .left image {
  width: 200rpx;
  height: 150rpx;

}

/* .top .left .cost image {
  width: 50rpx;
  height: 34rpx;
} */

.top .right {
  display: flex;
  flex-direction: column;
  color: #c0c0c0;
  font-size: 32rpx;
}

.top .right .cost {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  font-size: 28rpx;
}

.top .right image {
  width: 50rpx;
  height: 37rpx;
  margin-right: 10rpx;
}

.top .right .formula {
  font-size: 32rpx;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.top .right .formula text {
  margin-right: 10rpx;
  white-space: nowrap;
}

.top .right .formula image {
  width: 70rpx;
  height: 53rpx;
  margin-right: 10rpx;
}

