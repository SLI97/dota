.mid {
  display: flex;
  justify-content: center;
  flex-direction: column;
  font-size: 30rpx;
}

.mid .desc {
  /* width: 400rpx; */
  margin-right: 30rpx;
  color: #c0c0c0;
}

.mid .desc>view {
  margin-top: 30rpx;
}

.mid .notes {
  color: #6fe771;
  margin-top: 20rpx;
}

.mid .attrib {
  /* display: flex; */
  padding: 30rpx 30rpx;
}

.mid .attrib>view {
  margin-top: 10rpx;
}


.mid .attrib text:nth-child(1) {
  margin: 0 10rpx 0 0;
  /* color: #c0c0c0; */
}

.mid .attrib text:nth-child(2) {
  color: #fbb040;
  font-weight: bolder;
}

.mid .manacool {
  display: flex;
}

.mid .manacool>view {
  display: flex;
  align-items: center;
  margin-right: 100rpx;
}

