page {
  padding-bottom: 40rpx;
  color: #6e6e6e;
  font-size: 26rpx;
}

.container {
  height: 100%;
}

.map-container .row {
  display: flex;
  justify-content: center;
  align-items: center;
}

.map-container .item {
  width: 30rpx;
  height: 30rpx;
  background: #D8D8D8;
  margin: 2rpx;
  font-size: 16rpx;
}

.btn-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  margin-top: 30rpx;
}

.btn-container .button {
  width: 160rpx;
  background-color: #141516;
  padding: 10rpx 10rpx;
  /* margin-right: 10rpx; */
  box-sizing: border-box;
  border: 2rpx solid #202122;
  transition: all 0.2s ease;
  text-align: center;
}

.tip-overlay,
.case-overlay {
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 2;
  color: #D8D8D8;
  letter-spacing: 4rpx;
}

.tip-overlay .overlayMessage,
.case-overlay,
.case-overlay {
  font-size: 30rpx;
  font-weight: bold;
  padding: 0 80rpx 100rpx;
  display: flex;
  flex-direction: column;
}

.tip-overlay .overlayMessage .title {
  font-size: 46rpx;
}

.tip-overlay .overlayMessage view {
  text-indent: 48rpx;
  margin-bottom: 40rpx;
}

.case-overlay {
  justify-content: flex-start;
  padding: 0rpx 80rpx 80rpx;
}

.case-overlay .case-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #000;
  padding: 40rpx 40rpx 60rpx;
  margin: 60rpx 0 0;
}

.case-overlay image {
  width: 300rpx;
  height: 300rpx;
  margin: 40rpx auto;
}

.case-overlay .title{
  text-indent: 60rpx;
}

.case-overlay .btn {
  border-radius: 10rpx;
  background-color: #D8D8D8;
  color:black;
  font-size: 28rpx;
  padding:8rpx 30rpx;
}