page {
	height: 100vh;
	background: none;
}

.container.home {
	min-height: 100%;
	background-size: 100% auto;
	background-repeat: repeat-y;
	background-position: center top;
	padding: 2vw;
}

.container.home .bg {
	position: fixed;
	z-index: -1;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
}

.logo {
	position: fixed;
	right: 30rpx;
	top: 40rpx;
	width: 160rpx;
	height: 160rpx;
	z-index: 123;
}

.swiper-container {
	padding: 20rpx 20rpx;
	box-sizing: border-box;
	margin: 20rpx auto 60rpx;
	position: relative;
	border-radius: 20rpx;
	background: rgba(255, 255, 255, 0.2);
}

.swiper-wrapper {
	height: 400rpx;
}

.swiper-item {
	display: block;
	background-color: #e0ffff;
}

swiper-item image {
	width: 100%;
	height: 400rpx;
}

.swiper-pagination {
	display: flex;
	align-items: center;
	justify-content: center;
	position: absolute;
	bottom: 30rpx;
	left: 50%;
	transform: translateX(-50%);
}

.pagination-item {
	width: 100rpx;
	height: 74rpx;
	margin: 4rpx;
	box-sizing: border-box;
	border: 2px solid rgba(255, 255, 255, 0.3);
}

.pagination-item.active {
	border-color: #fff;
}

.pagination-item image {
	width: 100%;
	height: 100%;
}

.swiper-container.swiper-container__help {
	height: 620rpx;
}

.swiper-container.swiper-container__help .swiper-wrapper {
	height: 100%;
}

.swiper-container.swiper-container__help .swiper-item image {
	width: 100%;
	height: 100%;
}

.help__container {
	background: rgba(0, 0, 0, 0.4);
	color: #ccc;
	font-size: 28rpx;
	padding: 40rpx 20rpx 60rpx;
	box-sizing: border-box;
	line-height: 40rpx;
	display: inline-block;
	/* width: 600rpx;
	height: 500rpx; */
}

.help__container .help__title {
	font-weight: bold;
	font-size: 36rpx;
	line-height: 80rpx;
	color: #fff;
}


.help__container .help__sub__title {
	font-size: 30rpx;
	color: #fff;
	line-height: 60rpx;
}

.jump__container {
	width: 100%;
	height: 400rpx;
	margin: 20rpx auto 60rpx;
	line-height: 400rpx;
	font-size: 42rpx;
	text-align: center;
	color: #fff;
}

.jump__container .text {
	background: rgba(0, 0, 0, 0.4);
	text-shadow: 4rpx 4rpx 10rpx black;
}